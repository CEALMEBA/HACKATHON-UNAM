<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtTitleDialog"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:gravity="left|center"
        android:background="#FF333C46"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:text="Usuario o contrseña invalida"
        />

    <TextView
        android:id="@+id/txtIncidenciaName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="25dp"
        android:text="Ingrese correctamente su usuario y contraseña para continuar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1">

        <Button
            android:id="@+id/btnAceptarDialog"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:padding="16dp"
            android:background="@android:color/transparent"
            android:textAppearance="@android:style/TextAppearance.Widget.Button"
            android:text="Aceptar"/>
    </LinearLayout>
</LinearLayout>