<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtTitleDialog"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:gravity="left|center"
        android:background="#c42626"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="Close session"
        />

    <TextView
        android:id="@+id/txtDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="25dp"
        android:text="Esta cerrando session de la aplicacion, Â¿Esta seguro de cerrar session?"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c42626"
            android:padding="16dp"
            android:background="@android:color/transparent"
            android:textAppearance="@android:style/TextAppearance.Widget.Button"
            android:text="cancelar"
            android:layout_marginLeft="40dp"/>


        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c42626"
            android:padding="16dp"
            android:background="@android:color/transparent"
            android:textAppearance="@android:style/TextAppearance.Widget.Button"
            android:text="Aceptar"
            android:layout_marginLeft="80dp"/>
    </LinearLayout>
</LinearLayout>