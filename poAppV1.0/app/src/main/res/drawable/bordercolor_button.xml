<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#CA3B21"/>
            <stroke android:color="#CA3B21"
                android:width="2dp"
                />
            <corners android:radius="55dp"/>
            <padding android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
        </shape>

    </item>

    <item  >
        <shape>
            <gradient android:startColor="#CA3B21"
                android:endColor="#CA3B21"/>
            <stroke android:color="#CA3B21"
                android:width="2dp"
                />
            <corners android:radius="8dp"/>
            <padding android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
        </shape>

    </item>
</selector>